<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Note - QuickNotes</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/assets/logo.webp" type="image/x-icon">
    <style>
        .container {
            max-width: 800px;
        }
        .form-section {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-top: 2rem;
        }
        .btn-primary {
            background-color: #3B82F6;
            color: #ffffff;
        }
        .btn-secondary {
            background-color: #f3f4f6;
            color: #4b5563;
        }
        .hidden {
            display: none;
        }
        .block {
            display: block;
        }
        @media (min-width: 640px) {
            .flex-sm-row {
                flex-direction: row;
            }
            .justify-sm-end {
                justify-content: flex-end;
            }
        }
    </style>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg w-full">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <a href="/all-notes" class="flex items-center bg-gray-100 text-gray-700 border border-gray-300 rounded-lg px-4 py-2 shadow-md hover:bg-gray-200 hover:border-gray-400 transition duration-300">
                        <svg class="w-5 h-5 mr-2 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                        Back
                    </a>
                    <div class="flex items-center ml-4">
                        <img src="/assets/logo.webp" alt="QuickNotes Logo" class="h-12 w-12 mr-2">
                        <a href="/" class="flex items-center py-5 px-2 text-gray-700">
                            <span class="font-bold text-lg">QuickNotes</span>
                        </a>
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-1">
                    <a href="/all-notes" class="py-5 px-3 text-gray-700 hover:text-blue-600 hover:underline">All Notes</a>
                </div>
                <div class="md:hidden flex items-center">
                    <button class="mobile-menu-button">
                        <svg class="w-6 h-6 text-gray-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="hidden mobile-menu">
            <a href="/all-notes" class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-200">All Notes</a>
        </div>
    </nav>
    
    <!-- Create Note Section -->
    <!-- Create Note Section -->
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-center">Create New Note</h1>
    <div class="form-section">
        <form action="/create" method="post">
            <input required id="fileName" class="mb-4 border border-gray-300 p-3 w-full rounded" type="text" placeholder="File Name" name="title"/>
            <textarea id="fileContent" class="mb-4 border border-gray-300 p-3 w-full h-60 resize-none rounded" placeholder="Write your notes here..." name="filedata"></textarea>
            <div class="flex flex-col sm:flex-row justify-between sm:justify-end">
                <button type="submit" class="btn-primary px-4 py-2 rounded mb-4 sm:mb-0 sm:mr-4 w-full sm:w-auto">Create</button>
                <a href="/all-notes" class="btn-secondary px-4 py-2 rounded w-full sm:w-auto text-center">Cancel</a>
            </div>
        </form>
    </div>
</div>

    <!-- Footer -->
    <footer class="bg-white shadow-lg w-full mt-8 py-6 flex flex-col items-center space-y-4">
        <div class="text-center text-gray-700">
            &copy; 2024 QuickNotes. All rights reserved.
        </div>
        <div class="text-center">
            <a href="https://www.linkedin.com/in/darshangodase" target="_blank" class="text-blue-600 hover:text-blue-800 transition-colors">
                Contact Me on LinkedIn
            </a>
        </div>
    </footer>

    <script>
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.querySelector('.mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
